{
    "manifest_version": 2,
    "name": "Halloween Event 2018 Reward Alert",
    "version": "0.1",
    "author": "Abdullah Mallik (@mdn522)",
    "description": "Know what reward you get from Halloween Event 2018",
    "content_scripts": [
        {
            "run_at": "document_start",
            "js": [
                "content.js"
            ],
            "matches": [
                "https://wf.my.com/promo/halloween2018/*"
            ]
        }
    ],
    "icons": {
        "50": "icon.png"
    },
    "web_accessible_resources": [
        "xhook.min.js",
        "inject.js",
        "pupup.js"
    ],
    "browser_action": {
        "default_icon": {
            "50": "icon.png"
        },
        "default_title": "Halloween Event 2018 Reward Alert",
        "default_popup": "popup.html"
    }
}